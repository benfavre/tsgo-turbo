{
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/dist": true,
    "**/node_modules": true,
    "**/.turbo": true,
    "**/*.tsbuildinfo": true
  },
  "search.exclude": {
    "**/dist": true,
    "**/node_modules": true,
    "**/.turbo": true,
    "**/bun.lock": true
  },
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
