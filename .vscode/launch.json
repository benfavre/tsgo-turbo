{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extension"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/extension/dist/**/*.js"
      ],
      "preLaunchTask": "build",
      "env": {
        "TSGO_TURBO_DEV": "true"
      },
      "sourceMaps": true
    },
    {
      "name": "Attach to Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/packages/server/dist/**/*.js"
      ],
      "sourceMaps": true,
      "timeout": 30000
    }
  ],
  "compounds": [
    {
      "name": "Run Extension + Server Debug",
      "configurations": [
        "Run Extension",
        "Attach to Server"
      ]
    }
  ]
}
